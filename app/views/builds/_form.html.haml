= form_for [@project, @build], html: { class: 'form-inline' } do |f|
  - if @build.errors.any?
    #error_explanation
      %h2= "#{pluralize(@build.errors.count, "error")} prohibited this build from being saved:"
      %ul
        - @build.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :branch_name, class: 'span7', placeholder: 'branch name....'
    = f.submit 'Build', class: 'btn btn-success'
